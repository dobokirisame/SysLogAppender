DEFINES += SYSLOG_APPENDER_LIBRARY

TEMPLATE = lib
TARGET = syslogAppender
USE_USER_DESTDIR = YES

DISTFILES += *.pri

SOURCES += *cpp

HEADERS +=*.h

PROJECT_ROOT = $$PWD/..
DIR_THIRD_PARTY = $$PROJECT_ROOT/3rd-party
DIR_THIRD_PARTY_PREFIX = $$DIR_THIRD_PARTY/out

CONFIG(debug, debug|release) {
        DIR_OUTPUT = $$PROJECT_ROOT/build/debug
        DEFINES += SYSLOG_APPENDER_DEBUG
}
CONFIG(release, debug|release) {
        DIR_OUTPUT = $$PROJECT_ROOT/build/release
}
DESTDIR = $$DIR_OUTPUT
OBJECTS_DIR = $$DESTDIR/.obj/$$PROJECTFILENAME
MOC_DIR = $$DESTDIR/.moc/$$PROJECTFILENAME
UI_DIR = $$DESTDIR/.ui/$$PROJECTFILENAME


LIBS += -L$$DIR_THIRD_PARTY_PREFIX/lib
LIBS += -lCuteLogger

INCLUDEPATH += $$DIR_THIRD_PARTY_PREFIX/include
